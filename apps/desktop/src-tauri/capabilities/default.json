{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:execute",
      "allow": [
        {
          "name": "binaries/gca-brain",
          "sidecar": true
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "bash",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        }
      ]
    },
    "fs:default"
  ]
}
